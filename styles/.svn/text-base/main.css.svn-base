body {
	font-family: "Trebuchet MS", Trebuchet, Verdana, Arial, Sans-Serif;
	font-size: 100%;
	background-image: url(../images/canvastile_bg1.jpg);
	background-repeat: repeat-x;
	background-color: #e6e8eb;
}

a {
       text-decoration: none;
}
/*
a:after {
    content : url("../images/external.gif");
}
*/
a:hover {

}

#menu {
	margin: 0;
	padding: 0;
	float: left;
	width: 200px;
	font-size: 14px;
}

#menu a {
	text-decoration: none;
	color: white;
}
#menu ul {
	color: white;
	margin: 0;
	
}

#menu ul li {
	/*display: inline;   */
	list-style: none;
}
#menu a:hover, #menu a:active, #menu a:focus{
text-decoration: underline;
}

#main {
    display: block;
    z-index: 1;
	 border: 2px solid #EEEFF2;
	-moz-border-radius: 10px 10px 10px 10px;
	 background-color: white;
	 color: black;
	 margin-left: 220px;
	 padding: 15px;
	 margin-right:20px;
	 min-height: 1000px;
}

#tab_liste {
    border-collapse: collapse;
	 float: left;
}

#tab_liste, th, tr, td {
	border: 1px solid #dedede;
}
tr.odd {
       background-color: white;
 }

tr.even{
    background-color: white;
}
tr:hover {
	background-color: #f0ffff;
	cursor: default;
}


th {
	background-color: #e5e5e5;
}
td {
padding-left: 5px;
padding-right: 5px;
}




#form {
display: none;
padding: 15px;
}
#form input,  #form button, #form select{
	border: 1px solid black;
}
.form_cat_selected {
	background-color: #00b0e8;
}

ul#david_tree {
border: 1px solid black;
	z-index: 10000;
}

#menu {
    z-index: 1;
}

#modalOverlay {
    background-color:#000;
}

#modalContainer {
    /*height:300px; */
    width:500px;
    left:50%;
    top:15%;
    margin-left:-300px; /* half the width, to center */
    background-color:#fff;
    border:2px solid #ccc;
	-moz-border-radius: 5px 5px 5px 5px;
}

#modalContainer a.modalCloseImg {
    background:url(../images/x.png) no-repeat;
    width:25px;
    height:29px;
    display:inline;
    position:absolute;
    top:-14px;
    right:-18px;
    cursor:pointer;
}
.error {
color: red;
}


#log {
	background-color: #dcdcdc;
	width: 500px;
	margin: auto;
	margin-bottom: 20px;
   -moz-border-radius: 5px 5px 5px 5px;
	font-size: 12px;
	padding: 5px;
}

.selected {
color: orange;
}

div#details {
/*position: absolute;*/
	background-color: #e5e5e5;
   -moz-border-radius: 5px 5px 5px 5px;
	width: 200px;
	font-size: 12px;
}
div#details ul {
	list-style: none;
	padding: 10px;
	margin: 0px;
}

